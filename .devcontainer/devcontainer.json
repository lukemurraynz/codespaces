{
  "name": "Ubuntu",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:latest": {
      "installTFsec": true,
      "installTerraformDocs": true,
      "version": "latest",
      "tflint": "latest",
      "terragrunt": "0.48.0"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": ["eamodio.gitlens"]
    }
  },
  "forwardPorts": ["80"],

  "postCreateCommand": "httpd"
}
